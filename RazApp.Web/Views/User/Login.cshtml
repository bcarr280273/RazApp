@model RazApp.Web.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row-fluid">
    <div class="well span10 center login-box pull-right">
        @using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert">×</button>
                &nbsp;
                @Html.ValidationSummary(true)
                @Html.ValidationMessageFor(m => m.UserName) 
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <fieldset>
                <legend></legend>
                <div class="input-prepend" title="Username" data-rel="tooltip">
                    <span class="add-on"><i class="icon-user"></i></span>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "input-large span10", @placeholder = "Username" })
                </div>
                <div class="clearfix"></div>

                <div class="input-prepend" title="Password" data-rel="tooltip">
                    <span class="add-on"><i class="icon-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "input-large span10", @placeholder = "Password" })

                </div>
                <div class="clearfix"></div>

                <div class="input-prepend">
                    <label class="remember" for="remember">
                        @Html.CheckBoxFor(m => m.RememberMe)&nbsp; Remember me</label>
                </div>
                <div class="clearfix"></div>
                <div class="center span12">
                    <p class="span6">
                        <a href="@Url.Action("Register", "User")">
                            <button type="button" class="btn loginButton">Register</button></a>
                    </p>
                    <p class="span6">
                        <button type="submit" class="btn btn-primary loginButton">Login</button>
                    </p>

                </div>



            </fieldset>
        }
        <div class="span5 center">
        Login with : @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
    </div>
    </div>

    
</div>

@Scripts.Render("~/bundles/jqueryval")

