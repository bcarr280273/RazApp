@model ICollection<AuthenticationClientData>

@if (Model.Count != 0)
{
    using (Html.BeginForm("ExternalLogin", "User", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
    @Html.AntiForgeryToken()
   

        foreach (AuthenticationClientData p in Model)
        {
            if (p.DisplayName.Contains("Microsoft"))
            {     
            <button type="submit" name="provider" class="btn btn-default" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account">
                <img src="~/Content/images/microsoft-ico.png" style="height: 32px; width: 32px;" />
            </button> 
            }
            else if (p.DisplayName.Contains("Google"))
            {
            <button type="submit" name="provider" class="btn" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account">
                <img src="~/Content/images/google-ico.png" style="height: 32px; width: 32px;" />
            </button>                    
            }
            else if (p.DisplayName.Contains("Twitter"))
            {
            <button type="submit" name="provider" class="btn" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account">
                <img src="~/Content/images/twitter-ico.png" style="height: 32px; width: 32px;" />
            </button>  
            }
            else if (p.DisplayName.Contains("Facebook"))
            {
            <button type="submit" name="provider" class="btn" value="@p.AuthenticationClient.ProviderName" title="Log in using your @p.DisplayName account">
                <img src="~/Content/images/facebook-ico.png" style="height: 32px; width: 32px;" />
            </button>                     
            }


        }

    
    }
}
